{
  "manifest_version": 2,
  "name": "CodeBuddy",
  "version": "1.0",


  "description": "An awesome code buddy to help you find stuff fast!",
  "icons": {
          "48": "robit_48.png",
          "128": "robit_128.png" },


  "browser_action": {
          "default_icon": {                    
            "19": "robit_sleep_19.png",           
            "38": "robit_48.png"
          },
          "default_title": "CodeBuddy"     

    },
  "permissions": ["tabs",
  "audio",
  "tts",
  "ttsEngine",
  "http://devdocs.io/",
  "https://ajax.googleapis.com/",
  "http://*/"
  ],
  "tts_engine": {
  "voices": [
    {
      "voice_name": "Google US English",
      "lang": "en-US",
      "event_types": ["start", "marker", "end"]
    },
    {
      "voice_name": "Pat",
      "lang": "en-US",
      "event_types": ["end"]
    }
  ]
},
  "background": {
   "scripts": ["background.js"]
 }

}